@using WebApplication1.Models
@model IEnumerable<Category>
@{
    ViewBag.Title = "Index";
}

<table class="table">
    @foreach (var category in Model)
    {
    <tr>
        <td>@category.CategoryId</td>
        <td>@category.CategoryName</td>
        <td>@Html.ActionLink("Edit", "Edit", "Category", new { id = category.CategoryId }, new { @class = "btn btn-primary" })</td>
        <td>@Html.ActionLink("Remove", "Remove", "Category", new { id = category.CategoryId }, new { @class = "btn btn-danger" })</td>
    </tr>
    }
</table>
<div>
    @Html.ActionLink("Create", "Create", "Category", null, new { @class = "btn btn-success" })
</div>