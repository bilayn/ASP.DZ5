@using WebApplication1.Models
@model IEnumerable<Manufacturer>
@{
    ViewBag.Title = "Index";
}

<table class="table">
    @foreach (var manufacturer in Model)
    {
        <tr>
            <td>@manufacturer.ManufacturerId</td>
            <td>@manufacturer.ManufacturerName</td>
            <td>@Html.ActionLink("Edit", "Edit", "Manufacturer", new { id = manufacturer.ManufacturerId }, new { @class = "btn btn-primary" })</td>
            <td>@Html.ActionLink("Remove", "Remove", "Manufacturer", new { id = manufacturer.ManufacturerId }, new { @class = "btn btn-danger" })</td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Create", "Create", "Manufacturer", null, new { @class = "btn btn-success" })
</div>