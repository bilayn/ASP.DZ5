@using WebApplication1.Models
@model Category
@{
    ViewBag.Title = "Edit";
}

<div>
    @using (Html.BeginForm("Edit", "Category", FormMethod.Post))
    {
        <p>
            @Html.HiddenFor(x => x.CategoryId)
        </p>
        <p>
            @Html.LabelFor(x => x.CategoryName)
        </p>
        <p>
            @Html.ValidationMessageFor(x => x.CategoryName)
        </p>
        <p>
            @Html.TextBoxFor(x => x.CategoryName)
        </p>

        <input type="submit" />
    }
</div>



